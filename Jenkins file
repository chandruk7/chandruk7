pipeline {
    
    agent any 
    
    stage {
        
        stage("build"){
             
             step {
                  echo "Build the application"
        }
    }
    
    stage("testing"){
             
             step {
                  echo "testing the application"
        }
    }
    
    stage("deploy"){
             
             step {
                  echo "deploying the application"
         }
      }
   
   }
 }   
